int XuatHien(int i, int j)
{
	do
	{
		i= rand()%(n-1+1)+1;
		j= rand()%(n-1+1)+1;
	}
	while (a[i][j]!=0 && i<=n && j<=n);	
	a[i][j]=2;	
}
int DiChuyen(char m)
{
	int i,j,b,dem=0;
	FILE *output2;
		fflush(stdin);
		m=getch();
		switch (m)
		{
			case 75:
			{
				dem=0;
				for (i=1;i<=n;i++)
				{
					for (b=1;b<=n-1;b++)
					{
						for (j=1;j<=n-1;j++)
						{
							if ((a[i][j]==0) && (a[i][j+1]!=0))
							{
								a[i][j]=a[i][j+1];
								a[i][j+1]=0;
								dem++;
							}
						}	
					}
					for (j=1;j<=n-1;j++)
					{
						if (a[i][j]==a[i][j+1] && a[i][j]!=0)
						{
							a[i][j]=a[i][j]*2;
							a[i][j+1]=0;
							total=total+a[i][j];
							dem++;
						}
					}	
					for (b=1;b<=n-1;b++)
					{
						for (j=1;j<=n-1;j++)			
						{
							if ((a[i][j]==0) && (a[i][j+1]!=0))
							{
								a[i][j]=a[i][j+1];
								a[i][j+1]=0;
								dem++;
							}			
						}
					}
				}
				if (dem==0)
					return DiChuyen(m);
				else 
					return true;
			}
			break;
			case 72:
			{
				dem=0;
				for (j=1;j<=n;j++)
				{
					for (b=1;b<=n-1;b++)
						for (i=1;i<=n-1;i++)
						{
							if ((a[i][j]==0) && (a[i+1][j]!=0))
							{
								a[i][j]=a[i+1][j];
								a[i+1][j]=0;
								dem++;
							}
						}
					for (i=1;i<=n-1;i++)
					{
						if ((a[i][j]==a[i+1][j]) && (a[i][j]!=0))
						{
							a[i][j]=a[i][j]*2;
							a[i+1][j]=0;
							total=total+a[i][j]*2;	
							dem++;
						}	
					}	
					for (b=1;b<=n;b++)			
					{
						for (i=1;i<=n-1;i++)
						{
							if ((a[i][j]==0) && (a[i+1][j]!=0))
							{
								a[i][j]=a[i+1][j];
								a[i+1][j]=0;
								dem++;
							}
						}
					}	
				}
				if (dem==0)
					return DiChuyen(m);
			}
			break;
			case 77:
			{
				dem=0;
				for (i=1;i<=n;i++)
				{
					for (b=1;b<=n-1;b++)
					{
						for (j=n;j>=2;j--)
						{
							if ((a[i][j]==0) && (a[i][j-1]!=0))
							{
								a[i][j]=a[i][j-1];
								a[i][j-1]=0;
								dem++;
							}
						}	
					}
					for (j=n;j>=2;j--)
					{
						if (a[i][j]==a[i][j-1] && a[i][j]!=0)
						{
							a[i][j]=a[i][j]+a[i][j-1];
							a[i][j-1]=0;
							total=total+a[i][j];
							dem++;
						}
					}
					for (b=1;b<=n;b++)
					{
						for (j=n;j>=2;j--)
						{
							if ((a[i][j]==0) && (a[i][j-1]!=0))
							{
								a[i][j]=a[i][j-1];
								a[i][j-1]=0;
								dem++;
							}
						}	
					}
				}
				if (dem==0)
					return DiChuyen(m);
			}
			break;
			case 80:
			{
				dem=0;
				for (j=1;j<=n;j++)
				{
					for (b=1;b<=n;b++)
					{
						for (i=n;i>=2;i--)
						{
							if (a[i][j]==0 && a[i-1][j]!=0)
							{
								a[i][j]=a[i-1][j];
								a[i-1][j]=0;
								dem++;
							}
						}
					}
					for (i=n;i>=2;i--)	
					{
						if (a[i][j]==a[i-1][j] && a[i][j]!=0)
						{
							a[i][j]=a[i][j]*2;
							a[i-1][j]=0;
							total=total+a[i][j];
							dem++;
						}
					}
							
					for (b=1;b<=n-1;b++)
					{
						for (i=n;i>=2;i--)
						{
							if (a[i][j]==0 && a[i-1][j]!=0)
							{
								a[i][j]=a[i-1][j];
								a[i-1][j]=0;
								dem++;
							}	
						}
					}
				}
				if (dem==0)
					return DiChuyen(m);	
			}
			break;
			case 32:
				output2=fopen("C:/Users/Administrator/Documents/Hehe/Output2.txt","wb");
				for (i=1;i<=n;i++)
				{
					for (j=1;j<=n;j++)
					{
						fprintf(output2,"%d ",a[i][j]);
					}
					fprintf(output2,"\n");
				}
				fprintf(output2,"%d",total);
				fclose(output2);
				return true;
			break;
		}
}
int KiemTra()
{
	int c[12][12];
	int i,j,dem=0;
	dem=0;
	for (i=1;i<=n;i++)
		for (j=1;j<=n;j++)
			c[i][j]=a[i][j];
	for (i=1;i<=n;i++)
	{
		for (j=1;j<=n;j++)
		{
			if (c[i][j] ==0)
			{
				dem=1;
				break;
			}
			else if (c[i][j]!=0)
				{
					if (c[i][j]==c[i][j+1] || c[i][j]==c[i+1][j])
					{
						dem=1;
						break;
					}
				}
		}
	}
	if (dem==1)
		return true;
	else if  (dem==0)
		return false;
}
int main ()
{
	FILE *output1;
	FILE *output2;
	int i,j,c;
	char m;
	char k=' ';
	LoiNoiTacGia();
	do
	{
		printf("Chon 1, neu ban muon choi moi\n");
		printf("Chon 2, neu ban muon choi tiep tuc\n");
		printf("Moi ban chon:");
		scanf("%d",&c);
	}
	while (c!=2 && c!=1);
	
	if (c==1)
	{
		output1=fopen("C:/Users/Administrator/Documents/Hehe/Output1.txt","wb");
		printf("Moi ban nhap kich co choi: ");
		scanf("%d",&n);
		fprintf(output1,"%d",n);
		fclose(output1);
		for (i=1;i<=n;i++)
		{
			for (j=1;j<=n;j++)
			{
			a[i][j]=0;
			}
		}
		XuatHien(i,j);	
		XuatHien(i,j);
	}
	else if (c==2)
	{
		output2=fopen("C:/Users/Administrator/Documents/Hehe/Output2.txt","rb");
		output1=fopen("C:/Users/Administrator/Documents/Hehe/Output1.txt","rb");
		if (output1==NULL)
		{
			system("cls");
			printf("Chua co du lieu choi tiep\n");
			printf("Moi ban choi moi!\n");
			output1=fopen("C:/Users/Administrator/Documents/Hehe/Output1.txt","wb");
			waitFor(1);
			printf("Loading 10%% ...\n");waitFor (1);
			printf("Loading 20%% ...\n");waitFor (1);
			printf("Loading 30%% ...\n");waitFor (1);
			printf("Loading 40%% ...\n");waitFor (1);
			printf("Loading 50%% ...\n");waitFor (1);
			printf("Loading 60%% ...\n");waitFor (1);
			printf("Loading 70%% ...\n");waitFor (1);
			printf("Loading 80%% ...\n");waitFor (1);
			printf("Loading 90%% ...\n");waitFor (1);
			printf("Loading 100%% ...\n");waitFor (1);
			system("cls");
			printf("Moi ban nhap kich co choi: ");
			scanf("%d",&n);
			fprintf(output1,"%d",n);
			fclose(output1);
			for (i=1;i<=n;i++)
			{
				for (j=1;j<=n;j++)
				{
				a[i][j]=0;
				}
			}
			XuatHien(i,j);	
			XuatHien(i,j);
		}
		else 
		{
			fscanf(output1,"%d",&n);
			for (i=1;i<=n;i++)
				for(j=1;j<=n;j++)
				{
					fscanf(output2,"%d",&a[i][j]);
				}
			fclose(output1);
			fclose(output2);		
		}
	}
	printf("\n");
	Xuat();	
	do
	{
		DiChuyen(m);
		XuatHien(i,j);
		Xuat();
	}
	while  (KiemTra()==true && DiChuyen(m)!=true);
	Xuat();
	printf("Ban da thua!\n");
	do
	{
		printf("Bam Enter De Thoat!");
		m=getch();
		system("cls");
	}
	while (m!=13);
}

	

			
