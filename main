int a[12][12];
int total=0;
int n;
void waitFor (unsigned int secs) {
    unsigned int retTime = time(0) + secs;   // Get finishing time.
    while (time(0) < retTime);               // Loop until it arrives.
}
int Xuat()
{
	int i,j;
	char k=' ';
	system("cls");
	for (i=1;i<=n;i++)
			{
				for (j=1;j<=n;j++)
				{
					if (a[i][j]==0)
					printf("%8c",k);
					else if (a[i][j]!=0)
					printf("%7d ",a[i][j]);
				}
		
				printf("\n\n");
			}
			printf("\n");
			printf("Total : %i",total);
			printf("\n");
}
int Enter()
{
	char k=' ';
	char m;
	printf("\n");
	printf("%30cTiep Tuc ...",char(k));
	m=getch();
	system("cls");
	
}
